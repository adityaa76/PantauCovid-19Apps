<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/home_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:fontFamily="@font/productsansbold"
                android:textColor="#fff"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_margin="10dp"
                    android:background="#3D3D3D"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        tools:ignore="DisableBaselineAlignment">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="0.50"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:padding="10dp"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/home"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_app"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/home"
                                android:gravity="center"
                                android:text="Pantau"
                                android:textColor="#383838"
                                android:textSize="11dp"
                                android:fontFamily="@font/productsansbold"
                                android:layout_marginTop="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_provinsi"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="0.50"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:padding="10dp"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/provinsi"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_provinsi"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/provinsi"
                                android:gravity="center"
                                android:text="Provinsi"
                                android:textColor="#383838"
                                android:textSize="11dp"
                                android:fontFamily="@font/productsansbold"
                                android:layout_marginTop="15dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/btn_tentang_kami"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_weight="0.50"
                            android:layout_marginRight="5dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:padding="10dp"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/tentang_kami"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_tentangkami"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tentang_kami"
                                android:gravity="center"
                                android:text="Tentang"
                                android:textColor="#383838"
                                android:textSize="11dp"
                                android:fontFamily="@font/productsansbold"
                                android:layout_marginTop="15dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/data_dunia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Statistik Dunia"
                android:fontFamily="@font/productsansbold"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_positif"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                android:background="#636262"
                android:layout_below="@+id/data_dunia"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1,611,981"
                        android:textSize="30sp"
                        android:fontFamily="@font/productsansbold"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kasus Terkonfirmasi"
                        android:textSize="16sp"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/dunia2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/card_positif"
                tools:ignore="UselessLeaf"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_sembuh"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#636262"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="361,235"
                            android:textSize="22sp"
                            android:fontFamily="@font/productsansbold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Sembuh"
                            android:textSize="12sp"
                            android:fontFamily="@font/productsansregular"
                            android:gravity="center"/>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_meninggal"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#636262"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="30dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="96,783"
                            android:textSize="22sp"
                            android:fontFamily="@font/productsansbold"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Meninggal"
                            android:textSize="12sp"
                            android:fontFamily="@font/productsansregular"
                            android:gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/data_indo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Statistik Indonesia"
                android:fontFamily="@font/productsansbold"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_below="@+id/dunia2"
                android:layout_marginBottom="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/data_indo"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    tools:ignore="UselessLeaf">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Indonesia"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:fontFamily="@font/productsansbold"/>

                    <ImageView
                        android:id="@+id/icon_idn"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="7.5dp"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_indonesia"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/garis"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/icon_idn"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="#f0efef"
                        android:orientation="horizontal"/>

                    <TextView
                        android:id="@+id/txt_terkonfirmasi_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:text="Total Terkonfirmasi"
                        android:textSize="14sp"
                        android:layout_below="@+id/garis"
                        android:fontFamily="@font/productsansregular"/>

                    <TextView
                        android:id="@+id/hasil_positif_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:text="1728"
                        android:textSize="14sp"
                        android:textColor="#2196F3"
                        android:layout_below="@+id/garis"
                        android:fontFamily="@font/productsansregular"/>

                    <TextView
                        android:id="@+id/txt_sembuh_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Total Sembuh"
                        android:textSize="14sp"
                        android:layout_below="@+id/txt_terkonfirmasi_idn"
                        android:fontFamily="@font/productsansregular"/>

                    <TextView
                        android:id="@+id/hasil_sembuh_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:text="382"
                        android:textSize="14sp"
                        android:textColor="#24DD43"
                        android:layout_below="@+id/hasil_positif_idn"
                        android:fontFamily="@font/productsansregular"/>

                    <TextView
                        android:id="@+id/txt_meninggal_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Total Meninggal"
                        android:textSize="14sp"
                        android:layout_below="@+id/txt_sembuh_idn"
                        android:fontFamily="@font/productsansregular"/>

                    <TextView
                        android:id="@+id/hasil_meninggal_idn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:text="426"
                        android:textSize="14sp"
                        android:textColor="#FA1B1B"
                        android:layout_below="@+id/hasil_sembuh_idn"
                        android:fontFamily="@font/productsansregular"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>




</ScrollView>